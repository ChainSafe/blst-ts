{
  "include": ["src", "test"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "pretty": true,
    "lib": [
      "esnext.bigint",
      "dom"
    ],

    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "allowUmdGlobalAccess": true,

    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true
  }
}
