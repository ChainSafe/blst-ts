{
  "include": ["src/ts"],
  "exclude": [
    "blst",
    "dist",
    "doc",
    "fuzz-tests",
    "node_modules",
    "scripts",
    "spec-tests",
    "test",
  ],
  "compilerOptions": {
    "baseUrl": "src/ts",
    "rootDir": "src/ts",
    "moduleResolution": "node",        
    "noEmit": true,
    "lib": [
      "ESNext",
      "ESNext.BigInt",
    ],
    "pretty": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true
  },
}