{
  "include": ["test"],
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "pretty": true,
    "lib": ["esnext.bigint", "DOM"],

    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,

    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true
  },
}
