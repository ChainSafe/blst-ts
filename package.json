{
  "name": "@chainsafe/blst",
  "version": "1.0.0",
  "author": "ChainSafe Systems",
  "description": "Typescript wrapper for supranational/blst native bindings, a highly performant BLS12-381 signature library",
  "scripts": {
    "install": "ts-node scripts/install",
    "bootstrap": "yarn install --ignore-scripts && yarn build && yarn install",
    "clean-old": "rm -rf prebuild/*.node dist blst/libblst.a blst/bindings/libblst.a blst/bindings/node.js/blst.node blst/bindings/node.js/blst_wrap.cpp",
    "build:clean": "npm run clean && npm run build",
    "no-opt-note": "below here is good. check above",
    "clean": "npm run clean:dist; npm run clean:gyp",
    "clean:dist": "rm -rf dist",
    "clean:gyp": "node-gyp clean && node-gyp configure",
    "build:gyp": "node-gyp build",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:scripts": "tsc --project tsconfig.scripts.json",
    "build:esm": "tsc --project tsconfig.mjs.json",
    "build:ts": "npm run build:scripts && npm run build:cjs && npm run build:esm",
    "build:debug": "node-gyp build --debug",
    "build:fuzz": "tsc --project tsconfig.fuzz.json",
    "dev": "ts-node tools/dev",
    "lint": "npm run lint:c && npm run lint:ts",
    "lint:ts": "eslint --color --ext .ts lib/ test/",
    "lint:c": "clang-format -i ./src/*",
    "test": "yarn test:unit && yarn test:spec",
    "test:fuzz": "ts-node test/fuzz/fuzz.test.ts",
    "test:memory": "node -r ts-node/register --expose-gc test/memory/memory.test.ts",
    "test:perf": "UV_THREADPOOL_SIZE=$(nproc) NODE_OPTIONS='--loader=ts-node/esm' ts-node-esm node_modules/.bin/benchmark --config .benchrc.yaml test/perf/*.test.ts",
    "test:spec": "mocha test/spec/**/*.test.ts",
    "test:unit": "mocha test/unit/**/*.test.ts",
    "download-spec-tests": "node -r ts-node/register test/spec/downloadTests.ts"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^6.1.0",
    "node-fetch": "^2.6.1",
    "node-gyp": "^10.0.1"
  },
  "devDependencies": {
    "@chainsafe/threads": "^1.11.1",
    "@dapplion/benchmark": "^0.2.4",
    "@jazzer.js/core": "^2.1.0",
    "@types/bindings": "^1.5.5",
    "@types/chai": "^4.3.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.28",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "chai": "^5.1.0",
    "chokidar": "^3.5.3",
    "eslint": "^8.55.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "mocha": "^10.3.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "@types/js-yaml": "^4.0.5",
    "js-yaml": "^4.1.0",
    "tar": "^6.1.14",
    "threads": "^1.6.3"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "build/bindings",
    "blst/bindings/blst_aux.h",
    "blst/bindings/blst.h",
    "blst/bindings/blst.hpp",
    "blst/build/*",
    "blst/src/*",
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChainSafe/blst-ts.git"
  },
  "keywords": [],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ChainSafe/blst-ts/issues"
  },
  "homepage": "https://github.com/ChainSafe/blst-ts#readme"
}