{
  "include": ["lib/", "test/", "tools/"],
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],

    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,

    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true
  }
}
